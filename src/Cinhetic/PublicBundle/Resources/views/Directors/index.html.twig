{% extends 'CinheticPublicBundle::layout.html.twig' %}

{% block titlepage %}<i class="fa fa-video-camera"></i>&nbsp;&nbsp;Les réalisateurs{% endblock %}


{% block content %}
    <table class="records_list  table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Biographie</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><i class="text-danger"><a href="{{ path('directors_show', { 'id': entity.id }) }}">{{ entity.firstname }} {{ entity.lastname }}</a></i></td>
                <td>{{ entity.biography }}</td>
                <td>{{ entity.note }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('directors_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-search"></i> Voir</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('directors_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <hr />
            <a class="btn btn-danger" href="{{ path('directors_new') }}">
                Créer un nouveau réalisateur
            </a>

    {% endblock %}
