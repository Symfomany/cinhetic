{% extends 'CinheticPublicBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1><i class="glyphicon glyphicon-facetime-video"></i> Liste des Réalisateurs [{{ entities|length }}]</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Biographie</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('directors_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><i class="text-danger"><a href="{{ path('directors_show', { 'id': entity.id }) }}">{{ entity.firstname }} {{ entity.lastname }}</a></i></td>
                <td>{{ entity.biography }}</td>
                <td>{{ entity.note }}</td>
                <td>
                    <a href="{{ path('directors_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-search"></i> Voir</a>
                    <a href="{{ path('directors_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <hr />
            <a class="btn btn-primary" href="{{ path('directors_new') }}">
                Créer un nouveau réalisateur
            </a>

    {% endblock %}
