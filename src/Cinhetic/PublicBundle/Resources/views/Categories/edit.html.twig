{% extends 'CinheticPublicBundle::layout.html.twig' %}

{% block titlepage %}<i class="fa fa-pencil"></i>&nbsp;&nbsp;Editer la catégorie {{ entity.title|title}}{% endblock %}

{% block content %}
    <div class="row">
            {{ form(delete_form) }}
    </div>

    {{ form_start(edit_form)}}
	    <div class="row">
	    	     <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i> Présentation</span>
        </div>
         <div class="panel-body">
                        <div class="row">
                	        <div class="col-sm-6">
                	            {{ form_row(edit_form.title) }}
                	        </div>
                	        <div class="col-sm-6">
                	            {{ form_row(edit_form.parent) }}
                	        </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                {{ form_row(edit_form.description) }}
                            </div>
                        </div>
                	</div>
	    	</div>
	    {{ form_rest(edit_form) }}
	        <button type="submit" class="btn btn-labeled btn-lg btn-primary"><span class="btn-label icon fa fa-check"></span> Enregistrer</button>
    {{ form_end(edit_form)}}
{% endblock %}
