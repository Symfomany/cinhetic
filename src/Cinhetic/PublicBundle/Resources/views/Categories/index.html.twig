{% extends 'CinheticPublicBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1> <i class="glyphicon glyphicon-th-list"></i> Liste des categories [{{ entities|length }}]</h1>
    <hr />
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Nb de films</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="text-success"><a href="{{ path('categories_show', {'id' : entity.id}) }}">{{ entity.title }}</a></td>
                <td class="text-danger">{{ entity.description|raw }}</td>
                <td class="text-success">{{ entity.movies|length|default("0") }}</td>
                <td>

                        <a href="{{ path('categories_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-search"></i> Voir</a>

                        <a href="{{ path('categories_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Editer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr />

    <a class="btn btn-danger" href="{{ path('categories_new') }}">
        <i class="glyphicon glyphicon-plus"></i>  Creation de la cat√©gorie
    </a>

    {% endblock %}
