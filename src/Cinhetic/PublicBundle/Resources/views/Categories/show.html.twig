{% extends 'CinheticPublicBundle::layout.html.twig' %}

{% block content %}
    <div class="well">
        <h1>Catégorie {{ entity.title|title}}</h1>
        <p>{{ entity.description|raw }}</p>
        {% if entity.movies is not empty %}
            <div class="row">
                <div class="col-md-12">
                    <h3>Les films de cette catégorie</h3>
                    <div class="list-group">
                        {% for entity in entity.movies %}
                            <a href="{{ path('movies_show', { 'id': entity.id }) }}" class="list-group-item">
                                <h4 class="list-group-item-heading">{{ entity.title|title }}</h4>
                                <p class="list-group-item-text">{{ entity.synopsis|truncate(500,true,'...') }}</p>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

           <a class="btn btn-primary" href="{{ path('categories_edit', { 'id': entity.id }) }}">
                Editer la catégorie
            </a>
    </div>
{% endblock %}
