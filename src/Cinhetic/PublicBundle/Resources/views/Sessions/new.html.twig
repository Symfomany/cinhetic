{% extends 'CinheticPublicBundle::layout.html.twig' %}


{% block titlepage %}<i class="fa fa-plus"></i>&nbsp;&nbsp;Ajouter une séance{% endblock %}

{% block content %}
    {{ form_start(form)}}
    <div class="row">
        <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i> Détail</span>
        </div>
        <div class="panel-body">
        <div class="col-sm-6">
            {{ form_row(form.dateSession) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.hourSession) }}
        </div>
    {{ form_rest(form) }}
   </div> 
    </div>
    </div>
        <button type="submit" class="btn btn-labeled btn-lg btn-primary"><span class="btn-label icon fa fa-check"></span> Enregistrer</button>
    {{ form_end(form)}}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

       <script type="text/javascript">
	       var options = {
				minuteStep: 5,
				orientation: $('body').hasClass('right-to-left') ? { x: 'right', y: 'auto'} : { x: 'auto', y: 'auto'}
			}
            $("select").select2({
                allowClear: true,
                placeholder: "Selectionnez..."
            });
			$('.hour').timepicker(options);
            $('.datepick').datepicker({
                todayBtn: "linked",
                format: 'yyyy-mm-dd'
           });   
    	</script>

{% endblock %}