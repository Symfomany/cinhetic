{% extends 'CinheticPublicBundle::layout.html.twig' %}

{% block titlepage %}<i class="fa fa-pencil"></i>&nbsp;&nbsp;Editer une séance{% endblock %}


{% block content %}
    <div class="row">
            {{ form(delete_form) }}
    </div>

    {{ form_start(edit_form)}}
        <div class="row">
                <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title"><i class="fa fa-pencil"></i> Détail</span>
        </div>
        <div class="panel-body">
            <div class="col-sm-6">
                {{ form_row(edit_form.dateSession) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(edit_form.hourSession) }}
            </div>
            {{ form_rest(edit_form) }}
        </div>
        </div>
    <button type="submit" class="btn btn-labeled btn-lg btn-primary"><span class="btn-label icon fa fa-check"></span> Enregistrer</button>
    {{ form_end(edit_form) }}

{% endblock %}



{#
    Javascripts
#}
{% block javascripts %}
    {{ parent() }}

       <script type="text/javascript">
	       var options = {
				minuteStep: 5,
				orientation: $('body').hasClass('right-to-left') ? { x: 'right', y: 'auto'} : { x: 'auto', y: 'auto'}
			}
            $("select").select2({
                allowClear: true,
                placeholder: "Selectionnez..."
            });
			$('.hour').timepicker(options);
            $('.datepick').datepicker({
                todayBtn: "linked",
                format: 'yyyy-mm-dd'
           });   
    	</script>

{% endblock %}
