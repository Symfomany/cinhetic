{% extends "CinheticPublicBundle::layout_disconnect.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@CinheticPublicBundle/Resources/public/css/login.css' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block topmenu %}
{% endblock %}

{% block fos_user_content %}

<div class="container">
    <div class="row spacer">
        <div class="col-md-4 col-md-offset-4">
            <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                <h2 class="text-center form-signin-heading"><i class="glyphicon glyphicon-off"></i> {{ 'auth.title'|trans({}, 'CinheticPublicBundle') }}</h2>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                {% if error is defined and error is not empty   %}
                    <div class="alert alert-dismissable alert-danger">
                        <button class="close" data-dismiss="alert">Ã—</button>
                        <i class="glyphicon glyphicon-warning-sign"></i> {{ 'auth.badcredentials'|trans({}, 'CinheticPublicBundle') }}
                    </div>
                {% endif %}

                <div class="input-group">
                    <input name="_username" value="{{ last_username }}" type="text" class="form-control" placeholder=" {{ 'auth.email'|trans({}, 'CinheticPublicBundle') }}"
                           required="required">
                  <span class="input-group-btn">
                      <span class="btn btn-search btn-info"><i class="glyphicon glyphicon-user"></i></span>
                  </span>
                </div>
                <p></p>

                <div class="input-group">
                    <input name="_password" type="password" class="form-control" placeholder=" {{ 'auth.passord'|trans({}, 'CinheticPublicBundle') }}" required="required">
                  <span class="input-group-btn">
                      <span class="btn btn-search btn-info"><i class="glyphicon glyphicon-flash"></i></span>
                  </span>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me"> {{ 'auth.rememberme'|trans({}, 'CinheticPublicBundle') }}</label>
                        <i class="col-md-offset-1 glyphicon glyphicon-question-sign"></i> <a href="{{ path('CinheticPublicBundle_user') }}"> Pas encore inscrit ?</a>
                    </div>
                </div>

                <button class="btn btn-lg btn-info btn-block"  name="_submit" type="submit">
                    <i class="glyphicon glyphicon-lock"></i>
                    {{ 'security.login.submit'|trans }}
                </button>
            </form>
    </div>

{% endblock fos_user_content %}
