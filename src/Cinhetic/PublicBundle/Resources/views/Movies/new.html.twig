{% extends 'CinheticPublicBundle::layout.html.twig' %}


{% block titlepage %}<i class="fa fa-plus"></i>&nbsp;&nbsp;Ajouter un film{% endblock %}

{% block content %}
<form method="post" action="{{ path('movies_create') }}" id="handlemovie" novalidate="novalidate" enctype="multipart/form-data">
    <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title">Présentation</span>
        </div>
        <div class="panel-body">
             {{ form_row(form.title) }}
            {{ form_row(form.typeFilm) }}
            {{ form_row(form.synopsis) }}
            {{ form_row(form.description) }}
        </div>
    </div>

    <div class="panel form-horizontal">
        <div class="panel-heading">
            <span class="panel-title">Description</span>
        </div>
        <div class="panel-body">
            {{ form_row(form.file) }}
            {{ form_row(form.trailer) }}
            {{ form_row(form.languages) }}
            {{ form_row(form.distributeur) }}
            {{ form_row(form.bo) }}
            {{ form_row(form.annee) }}
            {{ form_row(form.budget) }}
            {{ form_row(form.duree) }}
            {{ form_row(form.dateRelease) }}
         </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel form-horizontal">
                <div class="panel-heading">
                    <span class="panel-title">Caractéristiques</span>
                </div>
                <div class="panel-body">
                    {{ form_row(form.notePresse) }}

                    <label class="checkbox-inline">
                        {{ form_widget(form.visible) }}
                        <span class="lbl">Visible ?</span>
                    </label>
                    <label class="checkbox-inline">
                        {{ form_widget(form.cover) }}
                        <span class="lbl">En couverture ?</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel form-horizontal">
                <div class="panel-heading">
                    <span class="panel-title">Relations</span>
                </div>
                <div class="panel-body">
                    {{ form_row(form.category) }}
                    {{ form_row(form.actors) }}
                    {{ form_row(form.cinemas) }}
                    {{ form_row(form.directors) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel form-horizontal">
                <div class="panel-heading">
                    <span class="panel-title">Extras</span>
                </div>
                <div class="panel-body">
                    {{ form_row(form.moviesRelated) }}
                    {{ form_row(form.tags) }}
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel form-horizontal">
                <div class="panel-heading">
                    <span class="panel-title">Vidéos</span>
                </div>
                <div class="panel-body">
                    <div class="row-fluid">
                        <ul class="medias" data-prototype="{{ form_widget(form.medias.vars.prototype)|e }}">
                            {% for media in form.medias %}
                                <li>{{ form_row(media.video) }}</li>

                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
     </div>

    {{ form_widget(form._token) }}

    <button class="btn btn-lg btn-primary btn-labeled"><span class="btn-label icon fa fa-check"></span> Enregistrer</button>
</form>

{% endblock %}



{% block javascripts %}
    {{ parent() }}
     {% javascripts '@CinheticPublicBundle/Resources/public/js/medias.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $('#file').pixelFileInput({ placeholder: 'Aucun fichier selectionné...' });
        $("#languages").select2({
                            allowClear: true,
                            placeholder: "Selectionnez..."
        });
        $('.datepick').datepicker();
    </script>
{% endblock %}