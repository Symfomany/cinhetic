{% block starsmovies %}
        <div class="panel panel-default widget-support-tickets" id="dashboard-support-tickets">
                    <div class="panel-heading">
                        <span class="panel-title"><i class="glyphicon glyphicon-heart"></i> Films les plus attendus</span>
                        <div class="panel-heading-controls">
                            <div class="panel-heading-text"><a href="#">{{ entities|length }} films</a></div>
                        </div>
                    </div> <!-- / .panel-heading -->
                    <div class="panel-body tab-content-padding">
                        <!-- Panel padding, without vertical padding -->
                        <div class="panel-padding no-padding-vr">

                    {% for entity in entities %}
                            <div class="ticket">
                                <span class="label label-default ticket-label">{{ entity.category.title }}</span>
                                <a href="{{ path('movies_show', {'id' : entity.id}) }}" title="" class="ticket-title">{{ entity.title }}<i>({{ entity.annee }})</i></a>
                                <span class="ticket-info">
                                    {{ entity.synopsis|striptags|raw|truncate(250,true, "...") }}
                                </span>
                                 <div><a href="" class="pull-right btn btn-xs btn-primary btn-labeled">
                                    <span class="btn-label icon fa fa-search"></span>
                                    Voir plus
                                </a></div>
                                <div class="clearfix"></div>
                            </div> <!-- / .ticket -->
                     {% else %}
                            <div class="alert">
                                <i class="glyphicon glyphicon-exclamation-sign"></i> Il n'y a pas de film Ã  l'affiche
                            </div>
                    {% endfor %}
                        </div>
                   
                    </div> <!-- / .panel-body -->
            </div> <!-- / .panel -->
{% endblock %}