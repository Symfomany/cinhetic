    <script type="text/javascript">
        var init = [];
        $("select").select2({
                            allowClear: true,
                            placeholder: "Selectionnez..."
                });
      	  $('.datepick').datepicker();
            init.push(function () {
				$('.ckeditor').summernote({
						height: 200,
						tabsize: 2,
						codemirror: {
							theme: 'monokai'
						}
				});
             });
            window.PixelAdmin.start(init);
    </script>
