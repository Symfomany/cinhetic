{% extends 'EzapPublicBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1><i class="glyphicon glyphicon-calendar"></i> Liste des séances [{{ entities|length }}]</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de session</th>
                <th>Film</th>
                <th>Cinéma</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sessions_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="text-danger"><i class="glyphicon glyphicon-time"></i> {% if entity.dateSession %}Le {{ entity.dateSession|date('Y-m-d') }} à {{ entity.dateSession|date('H:i') }}{% endif %}</td>
                <td class="text-success">{{ entity.movies.title|title }}</td>
                <td class="text-success"><i class="glyphicon glyphicon-map-marker"></i> {{ entity.cinema.title|title }}</td>
                <td>

                        <a href="{{ path('sessions_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-search"></i> Voir</a>

                        <a href="{{ path('sessions_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Editer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr />

    <a class="btn btn-danger" href="{{ path('sessions_new') }}">
        <i class="glyphicon glyphicon-plus"></i> Créer une séance
    </a>

    {% endblock %}
